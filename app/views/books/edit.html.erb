<h1>Editing Book</h1>

<%= form_with model: @book, url: update_path(@book.id), method: :patch do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit "Update Book" %>
<% end %>


<span><%= link_to "Show", book_path(@book) %></span>
<span><%= link_to "Back", index_path %></span>