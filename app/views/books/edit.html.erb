<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="error-count"><%= @book.errors.count %>errors occurred:</div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li class="error-message"><%= message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <%= f.submit "Update Book" %>
<% end %>


<span><%= link_to "Show", book_path(@book) %></span>
<span><%= link_to "Back", books_path %></span>